{
  "manifest_version": 2,
  "name": "Password Reminder",
  "description": "This extension is made to remind you to change your passwords in Chrome regularly and to generate a new one.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "/image/icon.png",
    "default_popup": "/src/html/menu.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/; object-src 'self' https://smtpjs.com/v3/smtp.js;"
}